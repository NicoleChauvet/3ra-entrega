<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">

    <!--aca debemos de poner el nombre con el cual identificaremos a la bd (debe estar el mismo mas abajo)-->
    <persistence-unit name="red-sismica" transaction-type="RESOURCE_LOCAL">
        <!-- Your entity classes -->
        <!-- esta es la parte que siempre debemos de cambiar segun las entitades que manejemos y como llamamos al package-->
        <class>dsi.ppai.entities.CambioEstado</class>
        <class>dsi.ppai.entities.Empleado</class>
        <class>dsi.ppai.entities.EstacionSismologica</class>
        <class>dsi.ppai.entities.MotivoFueraServicio</class>
        <class>dsi.ppai.entities.MotivoTipo</class>
        <class>dsi.ppai.entities.OrdenInspeccion</class>
        <class>dsi.ppai.entities.Rol</class>
        <class>dsi.ppai.entities.Sismografo</class>
        <class>dsi.ppai.entities.Sesion</class>
        <class>dsi.ppai.entities.Usuario</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:database.db"/>
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
